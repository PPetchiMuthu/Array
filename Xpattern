public class Xpattern {
    public static void main(String[] args) {
        String pattern = "PROGRAM";
        for(int i =0 ; i<pattern.length();i++) {
            for (int j = 0; j < pattern.length(); j++)
                if (j == i || j == pattern.length() - i - 1)
                    System.out.print(pattern.charAt(j) + " ");
                else
                    System.out.print("  ");
            System.out.println();
        }
    }
}
